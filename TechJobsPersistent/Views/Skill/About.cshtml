@model List<TechJobsPersistent.Models.JobSkill>

@if (Model.Count == 0)
{
    <h1>No jobs with the given skill!</h1>
}
else
{
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Jobs with the Skill: @Model[0].Skill.Name</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>Skill Description: @Model[0].Skill.Description</th>
        </tr>

        @foreach (var jobSkill in Model)
        {
            <tr><td><a class="btn btn-block btn-link shadow-none text-left" asp-controller="Home" asp-action="Detail" asp-route-id="@jobSkill.Job.Id">@jobSkill.Job.Name</a></td></tr>
        }
    </tbody>
</table>
}
