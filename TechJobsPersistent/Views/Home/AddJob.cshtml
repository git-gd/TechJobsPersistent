@model TechJobsPersistent.ViewModels.AddJobViewModel
<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployerId">Employer</label>
        <select class="form-control" asp-for="EmployerId" asp-items="Model.Employers"></select>
        <span asp-validation-for="EmployerId"></span>
    </div>
    @if (Model.Skills == null)
    {
        <p>No Sills Yet!</p>
    }
    else
    {
    <div class="form-group">
        @foreach (var skill in Model.Skills)
        {<div class="checkbox">
                 <label><input id="@skill.Id" name="selectedSkills" type="checkbox" value="@skill.Id" checked="@Model.SelectedSkills.Contains(skill.Id.ToString())" /> @skill.Name</label>
        </div>
        }
    </div>
    }
    <input type="submit" value="Add Job" />
    <hr />
    <p><a asp-controller="Employer" asp-action="Add">Add Employer</a></p>
    <p><a asp-controller="Skill" asp-action="Add">Add Skill</a></p>
</form>