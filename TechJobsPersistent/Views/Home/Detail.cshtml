@model TechJobsPersistent.ViewModels.JobDetailViewModel

<h1>@Model.Name</h1>

<table class="table w-auto table-light table-hover">
    <tr>
        <th class="text-right">Employer:</th>
        <td>@Model.EmployerName</td>
    </tr>
    <tr>
        <th class="text-right">Skills:</th>
        <td>@Model.SkillText</td>
    </tr>

</table>

<p><a asp-controller="Skill" asp-action="AddJob" asp-route-id="@Model.JobId">Add additional skills</a></p>