@{
    ViewData["Title"] = "Home Page";
}

@model List<TechJobsPersistent.Models.Job>

<div class="text-center">
    <h1 class="display-4">Welcome to TechJobs!</h1>
</div>

@if (Model.Count == 0)
{
    <p>No jobs yet!</p>
}
else
{
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Employer</th>
                <th>Location</th>
                <th>Job</th>
            </tr>
        </thead>
        <tbody>
        @foreach (Job job in Model)
        {
            <tr>
                <td>
                    @job.Employer.Name
                </td>
                <td>
                    @job.Employer.Location
                </td>
                <td>
                    <a asp-controller="Home" asp-action="Detail" asp-route-id="@job.Id">@job.Name</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}